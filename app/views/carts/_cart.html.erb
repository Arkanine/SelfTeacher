
<div class='store_nav'>
  <div id='left_col' class="list-group">

    <div id='cart'>
      <a href="#" class="list-group-item active">Кошик</a>

      <table class='cart_table'>
        <tbody>
          <%= render(cart.line_items) %>
          <tr>
            <td colspan="2">Всього:</td>
            <td ><%= number_to_currency(cart.total_price) %></td>
          </tr>
        </tbody>
      </table>

      <div id='cart_buttons' class="btn-group">
        <%= link_to 'Empty cart', cart, method: :delete, confirm: 'Are you sure?', class:'btn btn-default' %>
        <%= link_to 'Checkout', new_order_path, method: :get, class:'btn btn-default' %>
      </div>
    </div>

  </div>

  <div class='categories'>
    <a href="#" class="list-group-item active">Література</a>
    <% @categories = Category.all %>
    <% @categories.each do |category| %>
        <%= link_to category.name, category, class:'list-group-item' %>
    <% end %>
  </div>

</div>


