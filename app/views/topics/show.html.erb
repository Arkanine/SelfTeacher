<% provide(:title, "Forum | #{@topic.name}") %>



<div class="row">
  <div class="col-md-2"></div>

  <div class="col-md-8">
    <div class="page-header">
      <h3><%= link_to 'Рубрики', rubrics_path %> > <%= link_to @topic.rubric.name, @topic.rubric %> > <%= @topic.name %></h3>
    </div>

    <p><%= @topic.user.name %><p>
    <%= gravatar_for @topic.user %>
    <%= sanitize @topic.content.gsub(/\n/, '<br/>') %><br>
    <%= @topic.created_at.strftime('%d.%m.%Y в %H:%M') %><br>

    <% if @topic.comments.any? %>
      <%= nested_comments @topic.comments.arrange(:order => :created_at) %>
    <% end %>

    <% if current_user %>
      <div class="page-header">
        <h3>Add comment</h3>
      </div>
      <%= render 'comments/form' %>
    <% end %>
  </div>

  <div class="col-md-2"></div>
</div>

