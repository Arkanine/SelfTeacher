<div class="row">
  <div class="col-md-4"></div>

  <div id='central_col' class="col-md-4">

    <h4>Вхід</h4>
    <%= bootstrap_flash %>
    <%= form_tag sessions_path do %>
      <div class="form-group">
        <%= text_field_tag :email, params[:email], class: 'form-control', placeholder: 'Email' %>
      </div>
      <div class="form-group">
        <%= password_field_tag :password, nil, class: 'form-control', placeholder: 'Пароль' %>
      </div>
      <div class="form-group"><%= submit_tag 'Війти', class: 'btn btn-primary' %></div>
    <% end %>
    <p>Новий користувач? <%= link_to 'Зареєструйтесь!', new_user_path %></p>
    <div class="col-md-4"></div>
  </div>
</div>