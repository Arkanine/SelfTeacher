<div id='teach_pages' class="row">
  <div class="col-md-1"></div>
  <div class="col-md-3">
    <%= render 'static_pages/left_menue' %>
  </div>

  <div id='central_col' class="col-md-7">
    <h4 class='level_h4'><%= link_to @lesson.level.name, @lesson.level %> > <%= @lesson.name %></h4>
    <ul class='levels_content'>
      <% if @lesson.exercises.any? %>

          <% @lesson.exercises.each do |exercise| %>
            <h5><%= exercise.name %></h5>
            <div class='lesson_sontent'><%= exercise.content %></div>
          <% end %>

      <% end %>
    </ul>
  </div>
  <div class="col-md-1"></div>
</div>

