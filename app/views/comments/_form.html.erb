<div class="col-md-4">
  <%= form_for([@topic, @comment], :html => { :class => 'form-vertical answer-form' }) do |f| %>

      <div class="form-group">
        <%= f.text_area :content, placeholder: 'Content', class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.submit 'Comment' , class: 'btn btn-primary' %>
      </div>
  <% end %>
</div>