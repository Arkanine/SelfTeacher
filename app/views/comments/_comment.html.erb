<div class="media">
  <div class="pull-left">
    <%= gravatar_for(comment.user) %>
  </div>
  <div class="media-body">
    <h5 class="media-header">
      <%= link_to comment.user.name, comment.user %>
      <span class='time'><%= comment.created_at.strftime('%d.%m.%Y Ð² %H:%M') %></span>
    </h5>

    <p>
      <%= comment.content %><br>
    </p>

    <% if current_user %>
      <div class='comment_time_reply'>
        <%= link_to 'comment', new_topic_comment_path(parent_id: comment, topic_id: @topic.id) %>
      </div>
    <% end %>
  </div>
</div>

