
<div id='teach_pages' class="row">
  <div class="col-md-1"></div>
  <div class="col-md-3">
    <%= render @cart %>
  </div>

  <div id='central_col' class="col-md-7">
    <h4 class='level_h4'>Каталог книг</h4>
    <div class='levels_content'>
      <span id='new_header'>НОВИНКИ</span>
      <hr>
      <div class='row'>
        <% @last_products.each do |product| %>
        <div class="col-sm-12 col-md-4">
          <div class="thumbnail">

            <%= image_tag(product.image, width:'100%') %>
            <div class="caption">
              <h5><%= product.title %></h5>
              <p><%= sanitize( truncate product.description, length: 100) %></p>
              <p>Price: <%= number_to_currency(product.price) %></p>
              <p><%= button_to 'Add to Cart', line_items_path(product_id: product), class:'btn btn-primary' %></p>
            </div>

          </div>
        </div>
        <% end %>
      </div>

      <h3><%= link_to 'Перечень товаров', products_path %></h3>

    </div>
  </div>
  <div class="col-md-1"></div>
</div>
