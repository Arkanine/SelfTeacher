<div id='teach_pages' class="row">
  <div class="col-md-1"></div>
  <div class="col-md-3">
    <%= render @cart %>
  </div>

  <div id='central_col' class="col-md-7">
    <h4 class='level_h4'>Каталог книг</h4>
    <div class='levels_content'>
<h3>Популярная литература</h3>
<div id="myCarousel" class="carousel slide">
    <!-- Carousel items -->
        <div class="carousel-inner">
          <div class="active item"><img src="/images/3.jpg" alt="Book Carousel" /></div>
          <div class="item"><img src="/images/4.jpg" alt="Book Carousel" /></div>
          <div class="item"><img src="/images/3.jpg" alt="Book Carousel" /></div>
          <div class="item"><img src="/images/2.jpg" alt="Book Carousel" /></div>
          <div class="item"><img src="/images/1.jpg" alt="Book Carousel" /></div>
          <div class="item"><img src="/images/5.jpg" alt="Book Carousel" /></div>
      </div>
    <!-- Carousel nav -->
    <a class="carousel-control left" href="#myCarousel" data-slide="prev">&lsaquo;</a>
    <a class="carousel-control right" href="#myCarousel" data-slide="next">&rsaquo;</a>
 </div>
 
      <span id='new_header'>НОВИНКИ</span>
      <hr>
      <div class='row'>
        <% @last_products.each do |product| %>
        <div class="col-sm-12 col-md-4">
          <div class="thumbnail">

            <%= image_tag(product.image, class:'product_image', width:'150', height:'200') %>
            <div class="caption">
              <h5><%= product.title %></h5><hr>
              <p><%= sanitize( truncate product.description, length: 100) %></p>
              <span id='price'>Price: <%= number_to_currency(product.price) %></span>
              <%= button_to 'Add to Cart', line_items_path(product_id: product), class:'btn btn-primary btn-xlarge' %>
            </div>

          </div>
        </div>
        <% end %>
      </div>

      <h3><%= link_to 'Перечень товаров', products_path %></h3>

    </div>
  </div>
  <div class="col-md-1"></div>
</div>
