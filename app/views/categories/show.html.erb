

<div id='teach_pages' class="row">
  <div class="col-md-1"></div>
  <div class="col-md-3">
    <%= render @cart %>
  </div>

  <div id='central_col' class="col-md-7">
    <div class='categories_content'>

      <div id='category_menue' class="collapse navbar-collapse">
        <a class="navbar-brand" href="#"><%= @category.name %></a>

        <div class="nav navbar-nav navbar-right">
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Сортувати<b class="caret"></b></a>
            <ul id='drop_menu' class="dropdown-menu">
              <li class='drop_link'><%= sortable 'title' %></li>
              <li class='drop_link'><%= link_to 'По імені(від Я до А)', '#' %></li>
              <li class='drop_link'><%= sortable 'price' %></li>
              <li class='drop_link'><%= link_to 'По ціні(низька > висока)', '#' %></li>
            </ul>
          </li>
        </div>
      </div>

      <div class='row'>
        <% @products.each do |product| %>
            <div class="col-sm-12 col-md-4">
              <div class="thumbnail">

                <% if (product.image).blank?  %>
                    <%= image_tag('blank.gif', class:'product_image', width:'150', height:'200') %>
                <% else %>
                    <%= link_to image_tag(product.image, class:'product_image', width:'150', height:'200'), product %>
                <% end %>

                <div class="caption">
                  <%= link_to product.title, product %><hr>
                  <p><%= sanitize( truncate product.description, length: 100) %></p>
                  <span id='price'>Ціна: <%= number_to_currency(product.price) %></span>
                  <%= button_to 'До корзини', line_items_path(product_id: product), class:'btn btn-primary btn-xlarge' %>
                </div>

              </div>
            </div>
        <% end %>
      </div>

      <%= will_paginate @products %>

    </div>
  </div>

  <div class="col-md-1"></div>
</div>
