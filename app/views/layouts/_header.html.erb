<header id='header' class="navbar navbar-fixed-top">
  <nav class="navbar navbar-inverse" role="navigation">

    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="#">Brand</a>
    </div>

    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav">
        <li><%= link_to 'Головна', root_path %></li>
        <li><%= link_to 'Контакти', contact_path  %></li>
        <li><%= link_to 'Про нас', about_path %></li>
        <li><%= link_to 'Форум', rubrics_path %></li>
        <li><%= link_to 'Магазин', store_path %></li>
      </ul>

      <%= form_tag 'companies_path', :method => 'get', class:'navbar-form navbar-left', role:'search' do %>
          <div class="form-group">
            <%= text_field_tag :search, params[:search], class:'form-control', placeholder:'Найти ...' %>
          </div>
          <%= submit_tag 'Поиск', :name => nil, class:'btn btn-default' %>
      <% end %>

      <ul id="login" class="nav navbar-nav navbar-right">
        <% if current_user %>
            <li><%= link_to current_user.email, current_user %></li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">Профіль<b class="caret"></b></a>
              <ul class="dropdown-menu">
                <li><%= link_to 'Користувач', current_user %></li>
                <li><%= link_to 'Змінити', edit_user_path(current_user) %></li>
                <li class="divider"></li>
                <li><%= link_to 'Вийти', logout_path %></li>
              </ul>
            </li>
        <% else %>
            <li><%= link_to 'Вход', login_path %></li>
            <li></li>
        <% end %>
      </ul>

    </div>
  </nav>
</header>