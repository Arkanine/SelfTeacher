<div id='teach_pages' class="row">
  <div class="col-md-1"></div>
  <div class="col-md-3">
    <div class='teach_nav'>
      <div id='left_col' class="list-group">
        <a href="#" class="list-group-item active">
          SelfTeacher
        </a>
        <%= link_to 'Головна', root_path, class:'list-group-item' %>

        <div class="btn-group">
          <a href="#" class="list-group-item" data-toggle="dropdown">Курси англійської
            <span class="caret"></span>
          </a>
          <ul class="dropdown-menu list-inline" role="menu">
            <li><%= link_to 'Індивідуальні заняття', individual_learn_page_path %></li>
            <li><%= link_to 'Заняття по скайп', skype_learn_page_path %></li>
          </ul>
        </div>

        <%= link_to 'Вартість та оплата', payment_path, class:'list-group-item' %>
        <%= link_to 'Методика навчання', technique_path, class:'list-group-item' %>
        <%= link_to 'Програми навчання', training_program_path, class:'list-group-item' %>
        <%= link_to 'Рівні англійської', levels_path, class:'list-group-item' %>
        <a href="#" class="list-group-item">Пройти тест</a>
        <a href="#" class="list-group-item">Про нас</a>
        <%= link_to 'Відгуки', Topic.find_by_name('Відгуки'), class:'list-group-item' %>
        <a href="#" class="list-group-item">Контакти</a>
      </div>
    </div>
  </div>

  <div id='central_col' class="col-md-7">
    <% if current_page?(controller: 'static_pages', action: 'home') %>
      <%= render 'static_pages/content_pages/homepage' %>

    <% elsif current_page?(controller: 'static_pages', action: 'individual_learn_page') %>
      <%= render 'static_pages/content_pages/individual_learn_page' %>

    <% elsif current_page?(controller: 'static_pages', action: 'skype_learn_page') %>
      <%= render 'static_pages/content_pages/skype_learn_page' %>

    <% elsif current_page?(controller: 'static_pages', action: 'payment') %>
      <%= render 'static_pages/content_pages/payment' %>

    <% elsif current_page?(controller: 'static_pages', action: 'technique') %>
      <%= render 'static_pages/content_pages/technique' %>

    <% elsif current_page?(controller: 'static_pages', action: 'training_program') %>
      <%= render 'static_pages/content_pages/training_program' %>

    <% elsif current_page?(controller: 'levels', action: 'index') %>
      <%= render 'static_pages/content_pages/levels_page' %>
    <% end %>
  </div>

  <div class="col-md-1"></div>
</div>


