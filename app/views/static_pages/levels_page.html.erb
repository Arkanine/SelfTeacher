<div id='teach_pages' class="row">
  <div class="col-md-1"></div>
  <div class="col-md-3">
    <div class='teach_nav'>
      <div id='left_col' class="list-group">
        <a href="#" class="list-group-item active">
          SelfTeacher
        </a>
        <%= link_to 'Головна', root_path, class:'list-group-item' %>

        <div class="btn-group">
          <a href="#" class="list-group-item" data-toggle="dropdown">Курси англійської
            <span class="caret"></span>
          </a>
          <ul class="dropdown-menu list-inline" role="menu">
            <li><%= link_to 'Індивідуальні заняття', individual_learn_page_path %></li>
            <li><%= link_to 'Заняття по скайп', skype_learn_page_path %></li>
          </ul>
        </div>

        <%= link_to 'Вартість та оплата', payment_path, class:'list-group-item' %>
        <%= link_to 'Методика навчання', technique_path, class:'list-group-item' %>
        <%= link_to 'Програми навчання', training_program_path, class:'list-group-item' %>
        <%= link_to 'Рівні англійської', levels_path, class:'list-group-item' %>
        <a href="#" class="list-group-item">Пройти тест</a>
        <a href="#" class="list-group-item">Про нас</a>
        <%= link_to 'Відгуки', Topic.find_by_name('Відгуки'), class:'list-group-item' %>
        <a href="#" class="list-group-item">Контакти</a>
      </div>
    </div>
  </div>

  <div id='central_col' class="col-md-7">
    <h4 class='level_h4'>Рівні англійської мови</h4>
    <ol class='levels_content'>
      <% @levels.each do |level| %>
          <% if level.name == 'Початковий рівень: Starter(A1)' %>
              <li>
                <%= link_to level.name, level %>
              </li>
              <%= render 'levels/starter' %>
          <% elsif level.name == 'Елементарний рівень: Elementary (А1-А2)' %>
              <li>
                <%= link_to level.name, level %>
              </li>
              <%= render 'levels/elementary' %>
          <% elsif level.name == 'Проміжний рівень: Pre-Intermediate (А2-В1)' %>
              <li>
                <%= link_to level.name, level %>
              </li>
              <%= render 'levels/preintermediate' %>
          <% elsif level.name == 'Середній рівень: Intermediate (В1)' %>
              <li>
                <%= link_to level.name, level %>
              </li>
              <%= render 'levels/intermediate' %>
          <% end %>
      <% end %>
    </ol>

  </div>
  <div class="col-md-1"></div>
</div>
