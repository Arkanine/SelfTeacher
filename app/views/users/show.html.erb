<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name%>
      </h1>
    </section>
  </aside>
  <div class="span8">
    <% if @user.topics.any? %>
        <h3>Теми (<%= @user.topics.count %>)</h3>
        <ol class="topics">
          <% for topic in @user.topics %>
            <li><%= link_to topic.name, topic %></li>
          <% end %>
        </ol>

    <% end %>
  </div>
</div>