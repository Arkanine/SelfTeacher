<div class="page-header">
  <h1>Регистрация</h1>
</div>
<div class="col-md-4">
  <%= form_for @user do |f| %>
      <% if @user.errors.any? %>
          <div class="error_messages">
            <h2>Ошибки</h2>
            <ul>
              <% @user.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
              <% end %>
            </ul>
          </div>
      <% end %>

      <div class="form-group">
        <%= f.text_field :name, class: 'form-control', placeholder: 'Имя и фамилия' %>
      </div>
      <div class="form-group">
        <%= f.text_field :email, class: 'form-control', placeholder: 'Email' %>
      </div>
      <div class="form-group">
        <%= f.password_field :password, class: 'form-control', placeholder: 'Пароль' %>
      </div>
      <div class="form-group">
        <%= f.password_field :password_confirmation, class: 'form-control', placeholder: 'Повторите пароль' %>
      </div>
      <div class="form-group"><%= f.submit 'Зарегистрироваться', class: 'btn btn-primary' %></div>
  <% end %>
</div>