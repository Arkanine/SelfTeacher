<div class="row">
  <div class="col-md-4"></div>

  <div id='central_col' class="col-md-4">

    <h4>Редагувати дані</h4>

    <%= form_for @user do |f| %>
      <% if @user.errors.any? %>
        <div class="error_messages">
          <h2>Ошибки</h2>
          <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-group">
        <%= f.text_field :name, class: 'form-control', placeholder: 'Имя и фамилия' %>
      </div>
      <div class="form-group">
        <%= f.text_field :email, class: 'form-control', placeholder: 'Email' %>
      </div>
      <div class="form-group">
        <%= f.password_field :password, class: 'form-control', placeholder: 'Пароль' %>
      </div>
      <div class="form-group">
        <%= f.password_field :password_confirmation, class: 'form-control', placeholder: 'Повторите пароль' %>
      </div>
      <div class='avatar_edit'>
        <%= gravatar_for @user %>
        <a href="http://gravatar.com/emails">змінити аву</a>
      </div>
      <br>
      <div class="form-group"><%= f.submit 'Зберегти зміни', class: 'btn btn-primary' %></div>
    <% end %>
  </div>

  <div class="col-md-4"></div>
</div>
